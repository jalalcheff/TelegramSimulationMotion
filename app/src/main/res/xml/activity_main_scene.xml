<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/profile_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/thechance"
            app:shapeAppearanceOverlay="@style/logo_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            />
        <Constraint
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Constraint
            android:id="@+id/more"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_button"
            app:layout_constraintBaseline_toBottomOf="@id/back_button"
            />
        <Constraint
            android:id="@+id/chanel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Chance"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            style="@style/NormalText.WhiteText"
            app:layout_constraintStart_toEndOf="@id/profile_logo"
            app:layout_constraintTop_toTopOf="@id/profile_logo"
            app:layout_constraintBottom_toBottomOf="@id/profile_logo"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/profile_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/thechance"
            app:shapeAppearanceOverlay="@style/logo_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="@id/profile_logo"
            app:layout_constraintTop_toTopOf="@id/profile_logo"
            />
        <Constraint
            android:id="@+id/more"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="@id/profile_logo"
            app:layout_constraintTop_toTopOf="@id/back_button"
            />
        <Constraint
            android:id="@+id/chanel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Chance"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            style="@style/NormalText.WhiteText"
            app:layout_constraintBaseline_toBottomOf="@id/profile_logo"
            app:layout_constraintStart_toStartOf="@id/profile_logo"
            />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >
        <OnSwipe

            app:dragDirection="dragDown"/>
    </Transition>


</MotionScene>
