<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/father_constraint"
    tools:context=".MainActivity"
    android:background="@color/logo_section"
    app:layoutDescription="@xml/activity_main_scene">




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/messi"
            app:shapeAppearanceOverlay="@style/logo_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_logo_rec"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:src="@drawable/messi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/back_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBaseline_toBottomOf="@id/back_button"
        />
        <TextView
            android:id="@+id/chanel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Chance"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            style="@style/NormalText.WhiteText"
            app:layout_constraintStart_toEndOf="@id/profile_logo"
            app:layout_constraintTop_toTopOf="@id/profile_logo"
            app:layout_constraintBottom_toBottomOf="@id/profile_logo"
            />
        <TextView
            android:id="@+id/chanel_subscribers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="813 subscribers"
            style="@style/SmallText.WhiteText"
            android:textColor="@color/light_cyan"
            app:layout_constraintStart_toStartOf="@id/chanel_name"
            app:layout_constraintTop_toBottomOf="@id/chanel_name"
            app:layout_constraintEnd_toEndOf="@id/chanel_name"
            />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_logo"
        >
        <TextView
            android:id="@+id/info_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallText.CyanText"
            android:text="Info"

            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/info_link_section"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_link_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/info_word"
            app:layout_constraintTop_toBottomOf="@id/info_word"
            >
            <TextView
                android:id="@+id/link_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="t.me/theChance101"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                style="@style/NormalText.BlackText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite Link"
                style="@style/SmallText.gry"
                app:layout_constraintTop_toBottomOf="@id/link_title"
                app:layout_constraintStart_toStartOf="@id/link_title"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:strokeColor="@color/black"
                android:src="@drawable/join"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#E1E1E1"
    android:layout_marginVertical="16dp"
    app:layout_constraintTop_toBottomOf="@id/info_link_section"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/notification_section"
    />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_link_section"
            >
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textStyle="bold"
                style="@style/NormalText.BlackText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="off"
                style="@style/SmallText.gry"
                app:layout_constraintTop_toBottomOf="@id/notification_title"
                app:layout_constraintStart_toStartOf="@id/notification_title"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:strokeColor="@color/black"
                app:strokeWidth="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/seprator_media"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#E1E1E1"
        app:layout_constraintTop_toBottomOf="@id/info_section"
        />
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/telegram_shared_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/seprator_media"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/type_of_data_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media"
            android:gravity="center"
            style="@style/NormalText.CyanText"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Files"
            android:gravity="center"
            style="@style/NormalText.BlackText"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Links"
            android:gravity="center"
            style="@style/NormalText.BlackText"
            android:layout_weight="1"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_of_data_share"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/img"
            />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/img_1"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_3"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="center"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/img_4"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/img_5"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/img"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="4dp"

                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/img_5"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/img_3"
                    />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/img_4"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>