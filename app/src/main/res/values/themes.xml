<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelegramSimulationMotion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NormalText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NormalText.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NormalText.BlackText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SmallText.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SmallText.BlackText">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>