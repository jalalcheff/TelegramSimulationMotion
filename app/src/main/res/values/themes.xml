<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelegramSimulationMotion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#5A8FBB</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
    </style>
    <style name="NormalText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NormalText.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NormalText.BlackText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SmallText.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SmallText.BlackText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="logo_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="NormalText.CyanText">
        <item name="android:textColor">#468DC3</item>
    </style>
    <style name="SmallText.CyanText">
        <item name="android:textColor">#468DC3</item>
    </style>
    <style name="SmallText.gry">
        <item name="android:textColor">#818284</item>
    </style>


</resources>